{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}

    <div class="row">
        <section class="col-2">{% include'manager/aside.html.twig' %}</section>
        <section class="col-10  ">
            {# <section class="col-8 py-5 text-center container"> #}
            {# <a href="" id="btn-add-trainer">Add trainer</a> #}
{#            <button id="btn-add-trainer">Add trainer</button>#}
            <a href="{{ path('app_manager_create_trainer') }}">add trainer</a>

            <div id="form-trainer"></div>

            <div class="list-trainer">
                <form class="row row-cols-lg-auto g-3 align-items-center">
                    <table class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                        <tr>
                            <th>Firstname</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Actif</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody class="align-middle">
                        {% for trainer in trainer %}
                            <tr>
                                <td>{{ trainer.firstname }}</td>
                                <td>{{ trainer.name }}</p></td>
                                <td>{{ trainer.email }}</p></td>
                                <td>
                                    {% if trainer.isActive == 0 %}
                                        <p class="bgred">disable</p>
                                    {% else %}
                                        <p class="bggreen">actif</p>
                                    {% endif %}

                                    {# <span class="badge badge-success rounded-pill d-inline">Active</span> #}
                                </td>
                                <td>
                                    <button type="button" class="btn btn-link btn-sm btn-rounded">
                                        <a href="{{ path('app_manager_edit_trainer', {'id': trainer.id}) }}">edit</a>
                                    </button>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                    {# </div> #}
                </form>

            </div>

            {# <form class="row row-cols-lg-auto g-3 align-items-center"> #}

            {# </form> #}

        </section>

    </div>

{% endblock %}
