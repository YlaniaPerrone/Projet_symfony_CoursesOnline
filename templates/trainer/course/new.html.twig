{% extends 'base.html.twig' %}

{% block title %}New cours{% endblock %}

{% block body %}
<div class="row">

    <section class="col-2">{% include 'aside.html.twig' %}</section>

    <section class="col-10  ">

        <div id="form-courses mx-5"></div>

        <div class="form-new-course">
            <form class="row g-3" method="post" action="{{ path('coursNew') }}" >

                <h1 class="h3 mb-3 font-weight-normal">Crate a course</h1>

                {{ form_start(form) }}

                <div class="col-md-12">
                    {{ form_row(form.category, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.Title, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.level, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.price, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="col-md-12">
                    {{ form_row(form.nbrSession,  { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="col-md-12">
                    {{ form_row(form.Duration,  { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.Description,  { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.language,  { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                {{ form_end(form) }}
            </form>

        </div>

    </section>
</div>
{% endblock %}