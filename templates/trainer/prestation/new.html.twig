{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

   <div class="row">
       <section class="col-2">{% include 'aside.html.twig' %}</section>

       <section class="col-10  ">


           <div class="form-new-course mx-5">
               <div class="message">
                   {% for message in app.flashes('error', 'warning') %}
                       <div class="alert alert-error">
                           {{ message }}
                       </div>
                   {% endfor %}
               </div>
               <form class="row g-3" method="post" action="{{ path('app_trainer_prestation_new') }}">

                   <h1 class="h3 mb-3 font-weight-normal">Crate a course</h1>

                   {{ form_start(form) }}

                   <div class="col-md-6">
                       {{ form_row(form.startDate, { 'attr': {'class': 'form-control datepicker'} }) }}
                   </div>
                   <div class="col-md-6">
                       {{ form_row(form.startTime, { 'attr': {'class': 'form-control '} }) }}
                   </div>

                   <div class="col-md-6">
                       {{ form_row(form.endDate,  { 'attr': {'class': 'form-control datepicker'} }) }}
                   </div>

                   <div class="col-md-6">
                       {{ form_row(form.endTime, { 'attr': {'class': 'form-control '} }) }}
                   </div>

                   <div class="col-md-12">
                       {{ form_row(form.days,  { 'attr': {'class': 'form-control '} }) }}
                   </div>
                   <div class="col-md-12">
                       {{ form_row(form.cours,  { 'attr': {'class': 'form-control ', 'type': 'checkbox'} }) }}
                   </div>

                   <div class="col-12">
                       <button type="submit" class="btn btn-primary">Save</button>
                   </div>
                   {{ form_end(form) }}

               </form>

           </div>

       </section>
   </div>

{% endblock %}